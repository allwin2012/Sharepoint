{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "height": 250,
  "width": 450,
  "hideSelection": false,
  "fillHorizontally": true,
  "formatter": {
    "elmType": "div",
    "attributes": {
      "class": "sp-card-container"
    },
    "style": {
      "display": "flex",
      "justify-content": "center",
      "align-items": "end"
    },
    "children": [
      {
        "elmType": "div",
        "attributes": {
          "class": "sp-card-defaultClickButton",
          "style": {
            "display": "=if(@currentField == 'Title', 'none', 'block')"
          }
        },
        "customRowAction": {
          "action": "defaultClick"
        }
      },
      {
        "elmType": "div",
        "attributes": {
          "class": "ms-bgColor-white sp-css-borderColor-neutralLight sp-card-borderHighlight sp-card-subContainer"
        },
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "align-items": "end",
          "font-size": "18px",
          "padding-top": "30px",
          "padding-right": "40px",
          "font-weight": "400"
        },
        "children": [
          {
            "elmType": "div",
            "attributes": {
              "class": {
                "operator": "?",
                "operands": [
                  {
                    "operator": ">=",
                    "operands": [
                      "[$timevalue]",
                      "40:00"
                    ]
                  },
                  "ms-fontColor-green",
                  {
                    "operator": ":",
                    "operands": [
                      {
                        "operator": "<",
                        "operands": [
                          "[$timevalue]",
                          "40:00"
                        ]
                      },
                      "ms-fontColor-red",
                      ""
                    ]
                  }
                ]
              }
            },
            "style": {
              "font-size": "80px",
              "font-weight": "bold"
            },
            "children": [
              {
                "elmType": "p",
                "attributes": {
                  "title": "[$timevalue]",
                  "class": ""
                },
                "style": {},
                "txtContent": "=if([$timevalue] == '', '–', [$timevalue])"
              }
            ]
          },
          {
            "elmType": "div",
            "attributes": {
              "class": {
                "operator": "?",
                "operands": [
                  {
                    "operator": "==",
                    "operands": [
                      "@hover",
                      "true"
                    ]
                  },
                  "hidden",
                  ""
                ]
              }
            },
            "children": [
              {
                "elmType": "p",
                "attributes": {
                  "title": "[$Average]",
                  "class": ""
                },
                "style": {
                  "margin-top": "2%",
                  "font-weight": "400",
                  "font-size": "20px",
                  "height": ""
                },
                "txtContent": "=if([$Average] == '', '–', [$Average])"
              }
            ]
          },
          {
            "elmType": "div",
            "attributes": {
              "class": {
                "operator": "?",
                "operands": [
                  {
                    "operator": "==",
                    "operands": [
                      "@currentField",
                      "'Title'"
                    ]
                  },
                  "hidden",
                  ""
                ]
              }
            },
            "children": [
              {
                "elmType": "p",
                "attributes": {
                  "title": "[$Title]",
                  "class": "",
                  "role": "heading",
                  "aria-level": "3"
                },
                "style": {
                  "margin-top": "5%",
                  "align-item": "end",
                  "font-weight": "400",
                  "font-size": "25px"
                },
                "txtContent": "=if([$Title] == '', '–', [$Title])"
              }
            ]
          }
        ]
      }
    ]
  }
}
